#!/bin/bash

set -e

ashtray=$HOME/.cache/drag/ashtray

if [[ -z "$@" ]]; then
        echo "You can't smoke that!"
        echo
        exit 1
else
        cigs=""
        for cig in "$@"; do
                if [ -d /var/lib/drag/smoked/$cig ]; then
                        echo
                        echo "$cig has already been smoked"
                        echo
                else
                if [ ! -f $ashtray/$cig/.rolled ]; then
                        echo "$cig has not been rolled!"
                        echo "Attempting to roll $cig..."
                        roll $cig
                        echo
                fi
                if [[ -z $(ls $ashtray/$cig/pkg) ]]; then
                        rm $ashtray/$cig/.rolled
                        echo
                        echo "No files found in $cig's pkgdir"
                        echo
                        exit 1
                fi
                if command -v sudo >/dev/null 2>&1; then
                        SUDO=sudo
                elif command -v doas >/dev/null 2>&1; then
                        SUDO=doas
                elif command -v su >/dev/null 2>&1; then
                        SUDO="su root"
                fi
                if [ $EUID == 0 ]; then
                        SUDO=
                fi

                export ashtray cig
                $SUDO bash -c "
mkdir -p '/var/lib/drag/smoked/$cig'
cp '$ashtray/$cig/ver' '/var/lib/drag/smoked/$cig/ver'
while IFS= read -r file; do
        if [[ \"\$(file \"\$file\")\" != *directory* && \"\$(file \"\$file\")\" != *\"symbolic link\"* ]]; then
		mode=\"\$(stat -c %a \"\$file\")\"
                file=\"\${file#*'$cig'/pkg}\"
                echo \"\$file\" >> '/var/lib/drag/smoked/$cig/clutter'
                install -vDm\"\$mode\" '$ashtray/$cig'/pkg\"\$file\" \"\$file\"
        elif [[ \"\$(file \"\$file\")\" == *\"symbolic link\"* ]]; then
                file=\"\${file#*'$cig'/pkg}\"
                echo \"\$file\" >> '/var/lib/drag/smoked/$cig/clutter'
		ln -sfv \"\$(readlink '$ashtray/$cig'/pkg\"\$file\")\" \"\$file\"
	else
		mkdir -vp \"\$file\"
        fi
done < <(find '$ashtray/$cig'/pkg/*)
"

                echo "Smoked $cig"
                echo
                cigs="$cigs $cig,"
                fi
        done
        cigs="${cigs%%,}"
        echo
        echo "Smoked$cigs"
        echo
        exit 0
fi
